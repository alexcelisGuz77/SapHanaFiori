<mvc:View
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:form="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
    controllerName="PVSapHana.controller.Empleados"
>
    <Page title="Gestión de Empleados">
        <content>
            <VBox class="sapUiResponsiveMargin">
                <Text
                    text="Bienvenido a la página de Empleados"
                    class="sapUiSmallMarginBottom"
                />

                <Panel
                    headerText="Registrar nuevo empleado"
                    expandable="true"
                    expanded="true"
                    class="sapUiResponsiveMargin"
                >
                    <form:SimpleForm
                        editable="true"
                        layout="ResponsiveGridLayout"
                        labelSpanL="3"
                        labelSpanM="3"
                        emptySpanL="1"
                        emptySpanM="1"
                        columnsL="2"
                        columnsM="2"
                        title="Nuevo empleado"
                    >
                        <Label text="Nombre" />
                        <Input value="{formModel>/newEmpleados/nombre}" />

                        <Label text="Apellido Paterno" />
                        <Input
                            value="{formModel>/newEmpleados/apellidoPaterno}"
                        />

                        <Label text="Apellido Materno" />
                        <Input
                            value="{formModel>/newEmpleados/apellidoMaterno}"
                        />

                        <Label text="CURP" />
                        <Input value="{formModel>/newEmpleados/curp}" />

                        <Label text="RFC" />
                        <Input value="{formModel>/newEmpleados/rfc}" />

                        <Label text="Fecha Nacimiento" />
                        <DatePicker
                            value="{formModel>/newEmpleados/fechaNacimiento}"
                            displayFormat="yyyy-MM-dd"
                        />

                        <Label text="Sexo (0 = Femenino, 1 = Masculino)" />
                        <Input
                            value="{formModel>/newEmpleados/sexo}"
                            type="Number"
                        />

                        <Label text="Correo Electrónico" />
                        <Input
                            value="{formModel>/newEmpleados/correoElectronico}"
                            type="Email"
                        />

                        <Label text="Usuario" />
                        <Input value="{formModel>/newEmpleados/usuario}" />

                        <Label text="Puesto" />
                        <Input
                            value="{formModel>/newEmpleados/puesto}"
                            type="Number"
                        />

                        <Label text="Celular" />
                        <Input value="{formModel>/newEmpleados/celular}" />

                        <Label text="Negocio" />
                        <ComboBox
                            items="{/Negocio}"
                            selectedKey="{formModel>/newEmpleados/negocio_ID}"
                        >
                            <core:Item
                                key="{ID}"
                                text="{nombre}"
                            />
                        </ComboBox>

                        <Label text="" />
                        <Button
                            text="Guardar"
                            press=".onSaveEmpleado"
                            type="Emphasized"
                        />
                    </form:SimpleForm>
                </Panel>
                <SearchField
                    width="50%"
                    search=".onFilterInvoices"
                    class="sapUiResponsiveMargin"
                />
                <Table
                    id="empleadosTable"
                    items="{ path: '/Empleado' }"
                    growing="true"
                    growingScrollToLoad="true"
                    class="sapUiResponsiveMargin"
                >
                    <columns>
                        <Column>
                            <Text text="ID" />
                        </Column>
                        <Column>
                            <Text text="Negocio" />
                        </Column>
                        <Column>
                            <Text text="Nombre" />
                        </Column>
                        <Column>
                            <Text text="Apellido Paterno" />
                        </Column>
                        <Column>
                            <Text text="CURP" />
                        </Column>
                        <Column>
                            <Text text="RFC" />
                        </Column>
                        <Column>
                            <Text text="" />
                        </Column>
                    </columns>
                    <items>
                        <ColumnListItem>
                            <cells>
                                <Text text="{ID}" />
                                <Text text="{negocio/nombre}" />
                                <Text text="{nombre}" />
                                <Text text="{apellidoPaterno}" />
                                <Text text="{curp}" />
                                <Text text="{rfc}" />
                                <HBox
                                    justifyContent="Center"
                                    alignItems="Center"
                                >
                                    <Button
                                        icon="sap-icon://edit"
                                        type="Transparent"
                                        tooltip="Editar"
                                        press=".onBuscarEmpleadoById"
                                    />
                                    <Button
                                        icon="sap-icon://delete"
                                        type="Transparent"
                                        tooltip="Eliminar"
                                        press=".onDeleteEmpleado"
                                    />
                                </HBox>
                            </cells>
                        </ColumnListItem>
                    </items>
                </Table>
            </VBox>
        </content>
    </Page>
</mvc:View>
