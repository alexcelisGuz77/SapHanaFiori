<mvc:View
    xmlns:form="sap.ui.layout.form"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    controllerName="PVSapHana.controller.DetallePedido"
>
    <Page title="Gestion de Detalle Pedidos">
        <content>
            <Text
                text="Bienvenido a la pÃ¡gina Detalles peidos"
                class="sapUiSmallMarginBottom"
            />

            <Panel
                headerText="Registrar nuevo producto al pedido"
                expandable="true"
                expand="true"
                class="sapUiResponsiveMargin"
            >
                <form:SimpleForm
                    editable="true"
                    layout="ResponsiveGridLayout"
                    labelSpanL="3"
                    labelSpanM="3"
                    emptySpanL="1"
                    emptySpanM="1"
                    columnsL="2"
                    columnsM="1"
                    title="Nuevo Pedido"
                >
                    <Label text="Pedido" />
                    <ComboBox
                        items="{/Pedido}"
                        selectedKey="{formModel>/newDetallePedido/pedido_ID}"
                    >
                        <core:Item
                            key="{ID}"
                            text="{no}"
                        />
                    </ComboBox>

                    <Label text="Products" />
                    <ComboBox
                        items="{/Products}"
                        selectedKey="{formModel>/newDetallePedido/producto_ID}"
                    >
                        <core:Item
                            key="{ID}"
                            text="{name}"
                        />
                    </ComboBox>

                    <Label text="Cantidad" />
                    <Input value="{formModel>/newDetallePedido/cantidad}" />

                    <Label text="Precio Unitario" />
                    <Input
                        value="{formModel>/newDetallePedido/precioUnitario}"
                    />

                    <Label text="Estado" />
                    <Input value="{formModel>/newDetallePedido/estado}" />

                    <Label text="Fecha de Alta" />
                    <DatePicker
                        displayFormat="yyyy-MM-dd"
                        valueFormat="yyyy-MM-dd'T'HH:mm:ss"
                        value="{formModel>/newDetallePedido/audit_fechaAlta}"
                    />

                    <Label text="Fecha de Edicion" />
                    <DatePicker
                        displayFormat="yyyy-MM-dd"
                        valueFormat="yyyy-MM-dd'T'HH:mm:ss"
                        value="{formModel>/newDetallePedido/audit_fechaEdita}"
                    />

                    <Label text="Usuario Alta" />
                    <Input
                        value="{formModel>/newDetallePedido/audit_usuarioAlta}"
                    />

                    <Label text="Usuario Edita" />
                    <Input
                        value="{formModel>/newDetallePedido/audit_usuarioEdita}"
                    />
                    <Label text="" />
                    <Button
                        text="Guardar"
                        press=".onSaveDetallePedido"
                        type="Emphasized"
                    />
                </form:SimpleForm>
            </Panel>
            <SearchField
                width="50%"
                search=".onFilterInvoices"
                class="sapUiResponsiveMargin"
            />
            <Table
                id="detallePedidoTable"
                items="{ path: '/Detalle_pedido' }"
                growing="true"
                growingScrollToLoad="true"
                class="sapUiResponsiveMargin"
            >
                <columns>
                    <Column>
                        <Text text="ID" />
                    </Column>
                    <Column>
                        <Text text="No.Pedido" />
                    </Column>
                    <Column>
                        <Text text="producto" />
                    </Column>
                    <Column>
                        <Text text="Cantidad" />
                    </Column>
                    <Column>
                        <Text text="Precio Unitario" />
                    </Column>
                    <Column>
                        <Text text="Estado" />
                    </Column>
                    <Column>
                        <Text text="" />
                    </Column>
                </columns>
                                <items>
                    <ColumnListItem>
                        <cells>
                            <Text text="{ID}" />
                            <Text text="{pedido/no}" />
                            <Text text="{producto/name}" />
                            <Text text="{cantidad}" />
                            <Text text="{precioUnitario}" />
                            <Text text="{estado}" />
                            <HBox
                                justifyContent="Center"
                                alignItems="Center"
                            >
                                <Button
                                    icon="sap-icon://edit"
                                    type="Transparent"
                                    tooltip="Editar"
                                    press=".onBuscarDetallePedidoPorID"
                                />
                                <Button
                                    icon="sap-icon://delete"
                                    type="Transparent"
                                    tooltip="Eliminar"
                                    press=".onDeleteDetallePedido"
                                />
                            </HBox>
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </content>
    </Page>
</mvc:View>
