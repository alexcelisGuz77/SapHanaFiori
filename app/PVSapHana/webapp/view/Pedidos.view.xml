<mvc:View
    xmlns:form="sap.ui.layout.form"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    controllerName="PVSapHana.controller.Pedidos"
>
    <Page title="Gestion de Pedidos">
        <content>
            <Text
                text="Bienvenido a la pÃ¡gina Pedidos"
                class="sapUiSmallMarginBottom"
            />

            <Panel
                headerText="Registrar nuevo Pedido"
                expandable="true"
                expand="true"
                class="sapUiResponsiveMargin"
            >
                <form:SimpleForm
                    editable="true"
                    layout="ResponsiveGridLayout"
                    labelSpanL="3"
                    labelSpanM="3"
                    emptySpanL="1"
                    emptySpanM="1"
                    columnsL="2"
                    columnsM="1"
                    title="Nuevo Pedido"
                >
                    <Label text="Cliente" />
                    <ComboBox
                        items="{/Cliente}"
                        selectedKey="{formModel>/newPedido/cliente_ID}"
                    >
                        <core:Item
                            key="{ID}"
                            text="{nombre}"
                        />
                    </ComboBox>

                    <Label text="Numero" />
                    <Input value="{formModel>/newPedido/no}" />

                    <Label text="Empleado" />
                    <ComboBox
                        items="{/Empleado}"
                        selectedKey="{formModel>/newPedido/empleado_ID}"
                    >
                        <core:Item
                            key="{ID}"
                            text="{nombre}"
                        />
                    </ComboBox>

                    <Label text="Negocio" />
                    <ComboBox
                        items="{/Negocio}"
                        selectedKey="{formModel>/newPedido/negocio_ID}"
                    >
                        <core:Item
                            key="{ID}"
                            text="{nombre}"
                        />
                    </ComboBox>

                    <Label text="Estado" />
                    <Input value="{formModel>/newPedido/estado}" />

                    <Label text="Fecha de Alta" />
                    <DatePicker
                        displayFormat="yyyy-MM-dd"
                        valueFormat="yyyy-MM-dd'T'HH:mm:ss"
                        value="{formModel>/newPedido/audit_fechaAlta}"
                    />

                    <Label text="Fecha de Edicion" />
                    <DatePicker
                        displayFormat="yyyy-MM-dd"
                        valueFormat="yyyy-MM-dd'T'HH:mm:ss"
                        value="{formModel>/newPedido/audit_fechaEdita}"
                    />

                    <Label text="Usuario Alta" />
                    <Input value="{formModel>/newPedido/audit_usuarioAlta}" />

                    <Label text="Usuario Edita" />
                    <Input value="{formModel>/newPedido/audit_usuarioEdita}" />

                    <Label text="" />
                    <Button
                        text="Guardar"
                        press=".onSavePedido"
                        type="Emphasized"
                    />
                </form:SimpleForm>
            </Panel>

            <SearchField
                width="50%"
                search=".onFilterInvoices"
                class="sapUiResponsiveMargin"
            />

            <Table
                id="pedidoTable"
                items="{ path: '/Pedido' }"
                growing="true"
                growingScrollToLoad="true"
                class="sapUiResponsiveMargin"
            >
                <columns>
                    <Column>
                        <Text text="ID" />
                    </Column>
                    <Column>
                        <Text text="Cliente" />
                    </Column>
                    <Column>
                        <Text text="Numero" />
                    </Column>
                    <Column>
                        <Text text="empleado" />
                    </Column>
                    <Column>
                        <Text text="negocio" />
                    </Column>
                    <Column>
                        <Text text="estado" />
                    </Column>
                    <Column>
                        <Text text="" />
                    </Column>
                </columns>
                <items>
                    <ColumnListItem>
                        <cells>
                            <Text text="{ID}" />
                            <Text text="{cliente/nombre}" />
                            <Text text="{no}" />
                            <Text text="{empleado/nombre}" />
                            <Text text="{negocio/nombre}" />
                            <Text text="{estado}" />
                            <HBox
                                justifyContent="Center"
                                alignItems="Center"
                            >
                                <Button
                                    icon="sap-icon://edit"
                                    type="Transparent"
                                    tooltip="Editar"
                                    press=".onBuscarPedidoPorID"
                                />
                                <Button
                                    icon="sap-icon://delete"
                                    type="Transparent"
                                    tooltip="Eliminar"
                                    press=".onDeleteNegocio"
                                />
                            </HBox>
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </content>
    </Page>
</mvc:View>
