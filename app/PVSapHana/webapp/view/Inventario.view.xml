<mvc:View
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:form="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
    controllerName="PVSapHana.controller.Inventario"
>
    <Page title="Gestion de Inventarios">
        <content>
            <Text
                text="Bienvenido a la pÃ¡gina Inventario"
                class="sapUiSmallMarginBottom"
            />

            <Panel
                headerText="Registar un nuevo Imventario"
                expandable="true"
                expanded="true"
                class="sapUiResponsiveMargin"
            >
                <form:SimpleForm
                    editable="true"
                    layout="ResponsiveGridLayout"
                    labelSpanL="3"
                    labelSpanM="3"
                    emptySpanL="1"
                    emptySpanM="1"
                    columnsL="2"
                    columnsM="2"
                    title="Alta de Inventario"
                >
                    <Label text="Nombre" />
                    <Input value="{formModel>/newInventario/nombre}" />

                    <Label text="Nota" />
                    <Input value="{formModel>/newInventario/nota}" />

                    <Label text="Direccion" />
                    <Input value="{formModel>/newInventario/direccion}" />

                    <Label text="Estado" />
                    <Input value="{formModel>/newInventario/estado}" />

                    <Label text="Negocio" />
                    <ComboBox
                        items="{/Negocio}"
                        selectedKey="{formModel>/newInventario/negocio_ID}"
                    >
                        <core:Item
                            key="{ID}"
                            text="{nombre}"
                        />
                    </ComboBox>
                    <Label text="Fecha de Alta" />
                    <DatePicker
                        displayFormat="yyyy-MM-dd"
                        valueFormat="yyyy-MM-dd'T'HH:mm:ss"
                        value="{formModel>/newInventario/audit_fechaAlta}"
                    />

                    <Label text="Fecha de Edicion" />
                    <DatePicker
                        displayFormat="yyyy-MM-dd"
                        valueFormat="yyyy-MM-dd'T'HH:mm:ss"
                        value="{formModel>/newInventario/audit_fechaEdita}"
                    />

                    <Label text="Usuario Alta" />
                    <Input value="{formModel>/newInventario/audit_usuarioAlta}" />

                    <Label text="Usuario Edita" />
                    <Input value="{formModel>/newInventario/audit_usuarioEdita}" />

                    <Button
                        text="Guardar"
                        press=".onSaveInventario"
                        type="Emphasized"
                    />
                </form:SimpleForm>
            </Panel>
            <SearchField
                width="50%"
                search=".onFilterInvoices"
                class="sapUiResponsiveMargin"
            />

            <Table
                id="inventarioTable"
                items="{ path: '/Inventario' }"
                growing="true"
                growingScrollToLoad="true"
                class="sapUiResponsiveMargin"
            >
                <columns>
                    <Column>
                        <Text text="ID" />
                    </Column>

                    <Column>
                        <Text text="Inventario" />
                    </Column>
                    <Column>
                        <Text text="direccion" />
                    </Column>
                    <Column>
                        <Text text="estado" />
                    </Column>
                    <Column>
                        <Text text="Negocio" />
                    </Column>
                    <Column>
                        <Text text="fechaAlta" />
                    </Column>
                    <Column>
                        <Text text="usuarioAlta" />
                    </Column>
                    <Column>
                        <Text text="" />
                    </Column>
                </columns>
                <items>
                    <ColumnListItem>
                        <cells>
                            <Text text="{ID}" />
                            <Text text="{nombre}" />
                            <Text text="{direccion}" />
                            <Text text="{estado}" />
                            <Text text="{negocio/nombre}" />
                            <Text text="{audit_fechaAlta}" />
                            <Text text="{audit_usuarioAlta}" />
                            <HBox
                                justifyContent="Center"
                                alignItems="Center"
                            >
                                <Button
                                    icon="sap-icon://edit"
                                    type="Transparent"
                                    tooltip="Editar"
                                    press=".onBuscarInventarioPorID"
                                />

                                <Button
                                    icon="sap-icon://delete"
                                    type="Transparent"
                                    tooltip="Eliminar"
                                    press=".onDeleteInventario"
                                />
                            </HBox>
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </content>
    </Page>
</mvc:View>
